{
  "name": "@danny.andrews/eslint-config",
  "version": "2.0.1",
  "description": "The eslint config I use for personal projects",
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "license": "MIT",
  "author": "Danny Andrews",
  "files": [
    "rulesets",
    "*.js"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danny-andrews/eslint-config.git"
  },
  "scripts": {
    "ci": "yarn lint && yarn test",
    "lint": "eslint . && node_modules/.bin/sort-package-json",
    "test": "ava"
  },
  "dependencies": {
    "eslint-config-eslint": "^4.0.0"
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-eslint": "^7.2.1",
    "eslint": "^3.19.0",
    "sort-package-json": "^1.6.0"
  },
  "peerDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.0.0"
  },
  "ava": {
    "files": [
      "tests/**/*-test.js"
    ],
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "failFast": false
  }
}
