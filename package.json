{
  "name": "lint-configs",
  "version": "1.0.0",
  "description": "A collection of lint config files",
  "keywords": [
    "eslint",
    "eslintconfig",
    "lint",
    "lintconfigs"
  ],
  "license": "MIT",
  "author": "Danny Andrews",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danny-andrews/lint-configs.git"
  },
  "scripts": {
    "lint": "eslint -c index.js ./*.js && node_modules/.bin/sort-package-json",
    "test": "ava"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-eslint": "^6.0.4",
    "eslint": "^2.9.0",
    "sort-package-json": "^1.4.0"
  },
  "ava": {
    "files": [
      "tests/js/**/*-test.js"
    ],
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "failFast": false
  }
}
