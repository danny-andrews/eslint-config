{
  "name": "lint-configs",
  "version": "1.0.0",
  "description": "A collection of lint config files",
  "keywords": [
    "lint",
    "lintconfigs",
    "eslint",
    "eslintconfig"
  ],
  "license": "MIT",
  "author": "Danny Andrews",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danny-andrews/lint-configs.git"
  },
  "scripts": {
    "lint": "eslint -c index.js ./*.js",
    "test": "ava"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-eslint": "^6.0.4",
    "eslint": "^2.9.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2"
  },
  "ava": {
    "files": [
      "tests/js/**/*-test.js"
    ],
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "failFast": false
  }
}
